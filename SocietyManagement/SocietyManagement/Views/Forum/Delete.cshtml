@model SocietyManagement.Models.Forum

@{
    ViewBag.Title = "Delete";
}

<div class="box-header with-border">
    <h3 class="box-title"><i class="fa fa-bullhorn"></i> @ViewBag.Title</h3>
</div>

<div class="box-body">
    <h4>Are you sure you want to delete this?</h4>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ForumTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ForumTitle)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Details)
        </dt>

        <dd>
            @Html.Raw(Model.Details)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AuthorID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.Name)
        </dd>
    </dl>

</div>
<div class="box-footer">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="form-group">
                <div class="form-actions no-color col-md-offset-1 col-md-11">
                    <button type="submit" class="btn btn-danger"><i class="fa fa-remove"></i> Delete</button>                    
                    <a href="@Url.Action("Index")" title="Go Back" class="btn btn-default"><i class="fa fa-backward"></i> Back</a>
                </div>
            </div>
        </div>
    }
</div>