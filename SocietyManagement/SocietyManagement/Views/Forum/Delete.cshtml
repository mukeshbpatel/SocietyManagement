@model SocietyManagement.Models.Forum

@{
    ViewBag.Title = "Delete";
}

<h3><span class="glyphicon glyphicon-bullhorn"></span> Forum</h3>

<h4>Are you sure you want to delete this?</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ForumTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ForumTitle)
        </dd>
        
        
        <dt>
            @Html.DisplayNameFor(model => model.Details)
        </dt>

        <dd>
            @Html.Raw(Model.Details)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.AuthorID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.Name)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="form-group">
                <div class="form-actions no-color col-md-offset-1 col-md-11">
                    <input type="submit" value="Delete" class="btn btn-primary" />
                    <a href="@Url.Action("Index")" class="btn btn-default" role="button">Cancel</a>
                </div>
            </div>
        </div>
    }

</div>

