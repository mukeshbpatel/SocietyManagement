@model SocietyManagement.Models.Complaint

@{
    ViewBag.Title = "Complaint";
}

<div class="box-header with-border">
    <h3 class="box-title"><i class="fa fa-hand-o-up"></i> @ViewBag.Title</h3>
</div>
<div class="box-body">
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ComplaintDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ComplaintDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Author.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Author.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ComplaintTypeID)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ComplaintType.KeyValues)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.StatusID)
            </dt>
           
            <dd>
                @Html.DisplayFor(model => model.Status.KeyValues)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Details)
            </dt>

            <dd>
                @Html.Raw(Model.Details.Replace(Environment.NewLine, "</br>"))
            </dd>
            

        </dl>

       
    </div>
</div>
<div class="box-footer">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="form-group">
                <div class="form-actions no-color col-md-offset-1 col-md-11">
                    <button type="submit" class="btn btn-danger"><i class="fa fa-remove"></i> Delete</button>
                    <a href="#" onclick="goBack()" title="Go Back" class="btn btn-default"><i class="fa fa-backward"></i> Back</a>
                </div>
            </div>
        </div>
    }
</div>