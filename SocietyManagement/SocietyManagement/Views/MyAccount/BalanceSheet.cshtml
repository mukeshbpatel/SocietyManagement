@model IEnumerable<SocietyManagement.Models.SP_BuildingUnit_BalanceSheet_Result>
@{
    ViewBag.Title = "Balance Sheet";
}

@if (ViewBag.UnitID != null)
{

    <div class="box-header with-border">
        <h3 class="box-title"><i class="fa fa-calculator"></i> @ViewBag.Title</h3>
        <div class="pull-right">
            <a href="@Url.Action("BalanceSheetDownload",new {id=ViewBag.ID,Type="PDF"})" title="PDF Download"><i class="fa fa-file-pdf-o"></i> <span class="hidden-xs">PDF</span></a><span> &nbsp; </span>
            <a href="@Url.Action("BalanceSheetDownload",new {id=ViewBag.ID,Type="Excel"})" title="Excel Download"><i class="fa fa-file-excel-o"></i> <span class="hidden-xs">Excel</span></a>
        </div>
    </div>
        <div class="box-body">

            <ul class="nav nav-pills pull-right">
                @foreach (var item in (SelectList)ViewBag.UnitID)
                {
                    if (item.Selected)
                    {
                        <li class="active"><a href="#">@item.Text</a></li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("BalanceSheet", new { id = item.Value })">@item.Text</a></li>
                    }
                }
            </ul>



            @Html.Partial("_BalanceSheet", Model)
        </div>
}
else
{
    <div class="box-header with-border">
        <h3 class="box-title"><i class="fa fa-calculator"></i> @ViewBag.Title</h3>
    </div>
    <div class="box-body">
        <div class="alert alert-info">
            <h4><i class="icon fa fa-warning"></i> Alert!</h4>
            No Building Unit assigned to your user name. Please contact your Admin for details.
        </div>
    </div>
}
