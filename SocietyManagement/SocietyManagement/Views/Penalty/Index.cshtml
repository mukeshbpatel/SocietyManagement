@model IEnumerable<SocietyManagement.Models.Penalty>

@{
    ViewBag.Title = "Penalty";
}

<h3>Penalty</h3>

@if (Helper.IsInRole("Manger") || Helper.IsInRole("Super"))
{
<div class="pull-right">
    <a href="@Url.Action("Create",new {id=ViewBag.DueID})"><span class="fa fa-plus-square"></span> Add New</a>
</div>
}

<table class="table table-sm table-hover table-condensed table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PenaltyDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BuildingUnit.UnitName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PenaltyDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuildingUnit.UnitName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                <a href="@Url.Action("Details", new { id = item.DueID })" title="Details"><span class="glyphicon glyphicon-info-sign"></span></a>
                @if (Helper.IsInRole("Manger") || Helper.IsInRole("Super"))
                {
                    <a href="@Url.Action("Edit", new { id = item.DueID })" title="Edit"><i class="fa fa-edit"></i></a>
                    <a href="@Url.Action("Delete", new { id = item.DueID })" title="Delete"><i class="fa fa-remove"></i></a>
                }
            </td>
        </tr>
    }

</table>
