@model IEnumerable<SocietyManagement.Models.Due>

@{
    ViewBag.Title = "Bills";
}

<h3><span class="glyphicon glyphicon-usd"></span> Bills</h3>

@if (ViewBag.UnitID != null)
{    
    <ul class="nav nav-pills pull-right">
   @foreach (var item in (SelectList)ViewBag.UnitID)
      {
            if (item.Selected)
            {                
                <li class="active"><a href="#">@item.Text</a></li>
            }
            else
            {
                <li><a href="@Url.Action("MyBill", new { id = item.Value })">@item.Text</a></li>
            }
        }        
    </ul>

    @Html.Partial("_Bill",Model)

}
else
{
    <div class="bg-info" style="padding:10px"><span class="glyphicon glyphicon-info-sign"></span>No Building Unit assigned to your user id.<br />Please contact your Manager for details.</div>
}