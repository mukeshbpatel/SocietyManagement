@model IEnumerable<SocietyManagement.Models.Due>

@{
    ViewBag.Title = "Bills";
}

<div class="box-header with-border">
    <h3 class="box-title"><i class="fa fa-list-alt"></i> @ViewBag.Title</h3>
    @if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
    {
        <div class="pull-right">
            <a href="@Url.Action("Create")"><i class="fa fa-plus-square"></i> Add New</a>
        </div>
    }
</div>
<div class="box-body">
    <ul class="nav nav-pills pull-right">
        @foreach (var item in (SelectList)ViewBag.Months)
        {
            DateTime dt = DateTime.Parse(item.Text);
            if (item.Selected)
            {
                <li class="active"><a href="#">@dt.ToString("MMM-yy")</a></li>
            }
            else
            {
                <li><a href="@Url.Action("Index", new {BillDate = dt.ToString("dd-MM-yyyy") })">@dt.ToString("MMM-yy")</a></li>
            }
        }
    </ul>
    @Html.Partial("_Bill", Model)

</div>