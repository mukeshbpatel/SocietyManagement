@model SocietyManagement.Models.EmailTemplate
@{
    ViewBag.Title = "Email Template";
}

<h3><span class="glyphicon glyphicon-envelope"></span> Email Template</h3>

<h4>Are you sure you want to delete this?</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TemplateTypeID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TemplateType.KeyValues)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TemplateSubject)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TemplateSubject)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TemplateBody)
        </dt>

        <dd>
            @Html.Raw(Model.TemplateBody)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FromEmail)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FromEmail)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FromName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FromName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReplyToEmail)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReplyToEmail)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReplyToName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReplyToName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ModifiedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ModifiedDate)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="form-group">
                <div class="form-actions no-color col-md-offset-1 col-md-11">
                    <input type="submit" value="Delete" class="btn btn-primary" />
                    <a href="#" onclick="goBack()" title="Go Back" class="btn btn-default"><i class="fa fa-backward"></i> Back</a>
                </div>
            </div>
        </div>
    }
</div>
