@model IEnumerable<SocietyManagement.Models.Expense>


<div class="box box-danger" style="min-height:240px;">
    <div class="box-header with-border">
        <h3 class="box-title"><i class="fa fa-money"></i> Recent Expenses</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body no-padding">
        <table class="table table-sm table-hover table-responsive table-condensed">
            <tbody>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ExpenseDate)
                    </th>
                    <th  class="hidden-xs">
                        @Html.DisplayNameFor(model => model.ExpenseTypeID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PaidTo)
                    </th>
                    <th class="hidden-xs">
                        @Html.DisplayNameFor(model => model.PaymentModeID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExpenseDate)
                        </td>
                        <td  class="hidden-xs">
                            @item.ExpenseType.KeyValues
                        </td>
                        <td>
                            <a href="@Url.Action("Details","Expense", new { id = item.ExpenseID })" title="Details">@item.PaidTo</a>
</td> 
                        <td class="hidden-xs">
                            @item.PaymentMode.KeyValues
                        </td>                       
                        <td class="right">
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                    </tr>
                }
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="4">No Data available</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
