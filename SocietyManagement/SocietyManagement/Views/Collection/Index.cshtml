@model IEnumerable<SocietyManagement.Models.Collection>

@{
    ViewBag.Title = "Collection";
}

<div class="box-header with-border">
    <h3 class="box-title"><i class="fa fa-bank"></i> @ViewBag.Title</h3>
    @if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
    {
        <div class="pull-right">
            <a href="@Url.Action("Create")"><i class="fa fa-plus-square"></i> Add New</a>
        </div>
    }
</div>
<div class="box-body">

    @Html.Partial("_Payment", Model)

</div>