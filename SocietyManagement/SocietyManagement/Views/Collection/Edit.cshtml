@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<script>
    $(document).ready(function () {
        HideShowCheque();
        $("#PaymentModeID").change(function () {
            HideShowCheque();
        });
    });

    function HideShowCheque()
    {
        $(".cheque").hide();
        $(".ref").hide();
        $(".cheque_ref").hide();
        var mode = $("#PaymentModeID").val();
        if (mode == "1025")
        {
            $(".cheque_ref").show();
            $(".cheque").show();
            $(".ChequeDate").text("Cheque Date");
            $(".ChequeBank").text("Cheque Bank");
        } else if (mode == "1026")
        {
            $(".cheque_ref").show();
            $(".ref").show();
            $(".ChequeDate").text("Transfer Date");
            $(".ChequeBank").text("Bank");
        }

        //alert(mode);
    }
</script>