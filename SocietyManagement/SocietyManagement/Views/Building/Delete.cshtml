@model SocietyManagement.Models.Building

@{
    ViewBag.Title = "Building";
}

<div class="box-header with-border">
    <h3 class="box-title"><i class="fa fa-cubes"></i> @ViewBag.Title</h3>
</div>
<div class="box-body">
    <h4>Are you sure you want to delete this?</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.BuildingName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BuildingName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BuildingTypeID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BuildingType.KeyValues)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Details)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Details)
        </dd>
    </dl>
</div>
    <div class="box-footer">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="form-actions no-color col-md-offset-1 col-md-11">
                        <button type="submit" class="btn btn-danger"><i class="fa fa-remove"></i> Delete</button>
                        <a href="#" onclick="goBack()" title="Go Back" class="btn btn-default"><i class="fa fa-backward"></i> Back</a>
                    </div>
                </div>
            </div>
        }
    </div>
    

