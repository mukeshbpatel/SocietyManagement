@model SocietyManagement.Models.Notification

@{
    ViewBag.Title = "Notification";
}

<div class="box-header with-border">
    <h3 class="box-title"><i class="fa fa-envelope"></i> @ViewBag.Title</h3>
    <div class="pull-right">
        <a href="@Url.Action("Archive")"><i class="fa fa-archive"></i> <span class="hidden-xs">Archive</span></a> &nbsp;
        <a href="@Url.Action("Delete")"><i class="fa fa-remove"></i> <span class="hidden-xs">Delete</span></a> &nbsp;
        <a href="@Url.Action("Index")" title="Go Back to List"><i class="fa fa-backward"></i> <span class="hidden-xs">Back</span></a>
    </div>
</div>
<div class="box-body">

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TemplateID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmailTemplate.TemplateType.KeyValues)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Subject)
        </dd>        
        <dd>
            @Html.Raw(Model.Body)
        </dd>
    </dl>
</div>

