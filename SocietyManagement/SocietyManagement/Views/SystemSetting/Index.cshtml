@model IEnumerable<SocietyManagement.Models.SystemSetting>

@{
    ViewBag.Title = "System Settings";
}

<h3><span class="glyphicon glyphicon-cog"></span> System Settings</h3>

@if (User.IsInRole("SuperUser"))
{
    <div class="pull-right">
        <a href="@Url.Action("Create")"><span class="fa fa-plus-square"></span> Add New</a>
    </div>
}
<table class="table table-sm table-hover table-responsive table-condensed table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UDK1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SettingName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SettingValue)
        </th>              
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>       
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UDK1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SettingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SettingValue)
            </td>                       
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>            
            <td>
                @if (User.IsInRole("SuperUser"))
                {
                    <a href="@Url.Action("Details", new { id = item.SettingID })" title="Details"><span class="glyphicon glyphicon-info-sign"></span></a>                
                    <a href="@Url.Action("Edit", new { id = item.SettingID })" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>
                    <a href="@Url.Action("Delete", new { id = item.SettingID })" title="Delete"><span class="glyphicon glyphicon-remove"></span></a>
                }
            </td>
        </tr>
    }

</table>
