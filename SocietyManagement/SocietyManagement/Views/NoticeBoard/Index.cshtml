@model IEnumerable<SocietyManagement.Models.NoticeBoard>

@{
    ViewBag.Title = "Notice";
}

<h3><span class="glyphicon glyphicon-blackboard"></span> Notice Board</h3>

@if (User.IsInRole("Admin") || User.IsInRole("SuperUser") | User.IsInRole("Manger"))
{
    <div class="pull-right">
        <a href="@Url.Action("Create")"><span class="glyphicon glyphicon-plus"></span> Add New</a>
    </div>
}
<table class="table table-sm table-hover table-responsive table-condensed table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NoticeDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoticeHeading)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NoticeDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoticeHeading)
        </td>
@if (User.IsInRole("Admin") || User.IsInRole("SuperUser") | User.IsInRole("Manger"))
{
        <td>
            <a href="@Url.Action("Details", new { id = item.NoticeID })" title="Details"><span class="glyphicon glyphicon-info-sign"></span></a>
            <a href="@Url.Action("Edit", new { id = item.NoticeID })" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>
            <a href="@Url.Action("Delete", new { id = item.NoticeID })" title="Delete"><span class="glyphicon glyphicon-remove"></span></a>
        </td>
}
@if (User.IsInRole("User"))
{
    <td>
        <a href="@Url.Action("Details", new { id = item.NoticeID })" title="Details"><span class="glyphicon glyphicon-info-sign"></span></a>
    </td>
}
    </tr>
}

</table>
