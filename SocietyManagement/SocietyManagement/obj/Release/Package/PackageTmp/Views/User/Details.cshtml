@model SocietyManagement.Models.AspNetUser
@using SocietyManagement.Models;
@{
    ViewBag.Title = "Member";
}

<div class="box-header with-border">
    <h3 class="box-title"><i class="fa fa-user"></i> @ViewBag.Title</h3>
    <div class="pull-right">
        @if (Helper.IsInRole("Manager") || Helper.IsInRole("Super"))
        {
            <a href="@Url.Action("Edit", new { id = Model.Id })" title="Edit"><i class="fa fa-edit"></i> <span class="hidden-xs">Edit</span></a><span> &nbsp; </span>
            <a href="@Url.Action("Index")" title="List"><i class="fa fa-list"></i> <span class="hidden-xs">List</span></a><span> &nbsp; </span>
        }
    </div>
</div>

<div class="box-body">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName) (@Html.DisplayFor(model => model.AspNetRoles.FirstOrDefault().Name))
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Gender)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gender)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DOB)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DOB)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Profession)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Profession)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Occupation)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Occupation)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            <a href="mailto:@Model.Email">@Model.Email</a>            
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd>
            <a href="mailto:@Model.PhoneNumber">@Model.PhoneNumber</a>
        </dd>
       

       
    </dl>

    <h4><i class="fa fa-cube"></i> Units</h4>
    @Html.Partial("_BuildingUnit", Model.BuildingUnits.Where(d => d.IsDeleted == false))
</div>


